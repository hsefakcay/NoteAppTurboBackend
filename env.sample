# Application
APP_NAME=Note App Turbo API
ENV=development
DEBUG=true
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5500,exp://127.0.0.1:19000,exp://localhost:19000,http://10.0.2.2:3000

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/firebase-service-account.json

# Firestore Emulator (optional, for local development)
# FIRESTORE_EMULATOR_HOST=127.0.0.1:8080

# Rate limit (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT=100/10minute

# Google Gemini AI API
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here
